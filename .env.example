# Nexus TechHub Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME="Nexus TechHub"
NEXT_PUBLIC_APP_URL="https://nexustechhub.netlify.app"
NEXT_PUBLIC_COMPANY_NAME="Nexus TechHub"
NEXT_PUBLIC_COMPANY_PHONE="+971 58 553 1029"
NEXT_PUBLIC_COMPANY_EMAIL="info@nexustechhub.ae"
NEXT_PUBLIC_COMPANY_ADDRESS="Compass Building, Al Shohada Road, AL Hamra Industrial Zone-FZ, Ras Al Khaimah, United Arab Emirates"

# API Configuration
NEXT_PUBLIC_API_URL="https://nexustechhub.netlify.app/api"
API_SECRET_KEY="your-secret-key-here"

# Database Configuration (if using)
DATABASE_URL="your-database-url-here"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="nexustechhub"
DATABASE_USER="your-db-user"
DATABASE_PASSWORD="your-db-password"

# Authentication (if using)
NEXTAUTH_URL="https://nexustechhub.netlify.app"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# Third-party Services
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Email Service (if using)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@nexustechhub.ae"

# Analytics (if using)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="your-pixel-id"

# Cloudflare (if using)
CLOUDFLARE_API_TOKEN="your-cloudflare-token"
CLOUDFLARE_ZONE_ID="your-zone-id"

# Notion Integration (if using)
NOTION_API_KEY="secret_your-notion-key"
NOTION_DATABASE_ID="your-database-id"

# File Upload (if using)
UPLOAD_MAX_SIZE="10485760"  # 10MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# Security
CORS_ORIGIN="https://nexustechhub.netlify.app"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"  # 15 minutes

# Development
NODE_ENV="development"
DEBUG="false"
LOG_LEVEL="info"

# Deployment
NETLIFY_SITE_ID="your-netlify-site-id"
GITHUB_REPO="https://github.com/CorporateGuuu/nexustechhub"
